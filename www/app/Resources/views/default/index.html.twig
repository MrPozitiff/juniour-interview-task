{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
{% endblock %}

{% block js_source %}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
{% endblock %}

{% block body %}

    {{ dump(data) }}

    <div class="section">
        <div class="container">
            {% if is_granted('ROLE_ADMIN') %}
            <div class="row">
                <div class="col-md-12 well">
                    <a class="btn btn-primary" href="{{ path('add_new_employee') }}"><i class="fa fa-fw -square -circle fa-plus-square"></i> Add new employee</a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="section">
        <div class="container">
            <div class="row">
                {% include 'main/blocks/left_sidebar.html.twig' %}
                <div class="col-md-9">
                    <table class="table table-hover table-striped" id="view_employees">
                        <thead>
                            <tr>
                                <td></td>
                                <td>Position</td>
                                <td>Photo</td>
                                <td>Full Name</td>
                                <td>Salary rate</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                        {% for person in data.employee %}
                        <tr>
                            <td>
                                <h4>
                                    <b>{{ person.id }}</b>
                                </h4>
                            </td>
                            <td>
                                <h4>
                                    <b>{{ person.firstName ~ ' ' ~ person.lastName }}</b>
                                </h4>
                                <!--<a href="">Can be additional info</a>-->
                            </td>
                            <td>
                                <h4>
                                    <b>{{ person.employeePosition.name }}</b>
                                </h4>
                                <p>Since {{ person.employmentDate | date('Y-m-d') }}</p>
                            </td>
                            <td>
                                <img src="{{ asset('uploads/media/img/') ~ person.photo }}" class="img-circle" width="60">
                            </td>
                            <td>
                                <h4>
                                    <b>{{ person.salaryRate }} <i class="fa fa-fw fa-usd"></i></b>
                                </h4>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-default" value="left" type="button">
                                        <i class="fa fa-fw s fa-eye"></i>View</button>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <button class="btn btn-default" value="right" type="button">
                                        <i class="fa fa-fw fa-cog"></i>Edit</button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        <tr>
                            <td>
                                <a href="#"><i class="fa fa-2x fa-fw fa-eye-slash"></i></a>
                            </td>
                            <td>
                                <h4>
                                    <b>Supervisora</b>
                                </h4>
                                <p>@claudiaramos</p>
                            </td>
                            <td>
                                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/user_placeholder.png" class="img-circle" width="60">
                            </td>
                            <td>
                                <h4>
                                    <b>Claudia Ramos</b>
                                </h4>
                                <a href="mailto:claudia@mail.com">claudia@mail.com</a>
                            </td>
                            <td>3 años</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-default" value="left" type="button">
                                        <i class="fa fa-fw s fa-remove"></i>Eliminar</button>
                                    <button class="btn btn-default" value="right" type="button">
                                        <i class="fa fa-fw fa-cog"></i>Configurar</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="#"><i class="fa fa-2x fa-fw fa-eye"></i></a>
                            </td>
                            <td>
                                <h4>
                                    <b>Gerente de capacitación</b>
                                </h4>
                                <p>@anaojeda</p>
                            </td>
                            <td>
                                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/user_placeholder.png" class="img-circle" width="60">
                            </td>
                            <td>
                                <h4>
                                    <b>Ana Isabel Ojeda</b>
                                </h4>
                                <a href="mailto:ana@mail.com">ana@mail.com</a>
                            </td>
                            <td>1 mes</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-default" value="left" type="button">
                                        <i class="fa fa-fw s fa-remove"></i>Eliminar</button>
                                    <button class="btn btn-default" value="right" type="button">
                                        <i class="fa fa-fw fa-cog"></i>Configurar</button>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

